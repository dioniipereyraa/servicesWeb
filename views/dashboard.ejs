                    'Varios': ['varios', 'general', 'otros']
                };
                
                let conceptoSugerido = 'Gasto General';
                const textoLower = texto.toLowerCase();
                
                for (const [categoria, keywords] of Object.entries(conceptoKeywords)) {
                    if (keywords.some(keyword => textoLower.includes(keyword))) {
                        conceptoSugerido = categoria;
                        break;
                    }
                }
                
                // Extraer fecha
                let fechaDetectada = new Date().toISOString().split('T')[0]; // Default: hoy
                const fechaPatterns = [
                    /(\d{1,2})[\/\-](\d{1,2})[\/\-](\d{2,4})/g,
                    /(\d{2,4})[\/\-](\d{1,2})[\/\-](\d{1,2})/g
                ];
                
                for (const pattern of fechaPatterns) {
                    const matches = [...texto.matchAll(pattern)];
                    if (matches.length > 0) {
                        try {
                            const match = matches[0];
                            const parts = match[0].split(/[\/\-]/);
                            let fecha;
                            
                            if (parts[0].length === 4) {
                                // YYYY/MM/DD
                                fecha = new Date(parts[0], parts[1] - 1, parts[2]);
                            } else {
                                // DD/MM/YYYY
                                fecha = new Date(parts[2], parts[1] - 1, parts[0]);
                            }
                            
                            if (fecha && !isNaN(fecha.getTime())) {
                                fechaDetectada = fecha.toISOString().split('T')[0];
                                break;
                            }
                        } catch (e) {
                            console.log('Error parseando fecha:', e);
                        }
                    }
                }
                
                // Mostrar resultados
                document.getElementById('importeDetectado').textContent = importeDetectado || 'No detectado';
                document.getElementById('conceptoSugerido').textContent = conceptoSugerido;
                document.getElementById('fechaDetectada').textContent = fechaDetectada;
                document.getElementById('ocrResultados').style.display = 'block';
                
                // Guardar datos para uso posterior
                window.datosFacturaOCR = {
                    importe: importeDetectado,
                    concepto: conceptoSugerido,
                    fecha: fechaDetectada,
                    textoCompleto: texto
                };
            }

            // Confirmar y agregar gasto automáticamente
            document.getElementById('confirmarGasto').addEventListener('click', async function() {
                const datos = window.datosFacturaOCR;
                if (!datos || !datos.importe) {
                    alert('No se pudo detectar el importe. Usa "Editar Antes" para ingresar manualmente.');
                    return;
                }
                
                const confirmar = confirm(`¿Confirmar agregar gasto?\n\nConcepto: ${datos.concepto}\nImporte: $${datos.importe}\nFecha: ${datos.fecha}`);
                if (!confirmar) return;
                
                try {
                    const response = await fetch('/agregar-gasto', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/x-www-form-urlencoded',
                        },
                        body: new URLSearchParams({
                            descripcion: `${datos.concepto} (OCR)`,
                            monto: parseFloat(datos.importe.replace(',', '.')),
                            cantidadEnLts: 1,
                            fecha: datos.fecha
                        })
                    });
                    
                    if (response.ok) {
                        alert('¡Gasto agregado exitosamente desde la factura!');
                        window.location.reload();
                    } else {
                        throw new Error('Error al agregar gasto');
                    }
                } catch (error) {
                    console.error('Error:', error);
                    alert('Error al agregar el gasto. Intenta editando manualmente.');
                }
            });

            // Editar datos antes de confirmar
            document.getElementById('editarAntes').addEventListener('click', function() {
                const datos = window.datosFacturaOCR;
                if (datos) {
                    // Pre-llenar formulario de gastos
                    document.getElementById('descripcion').value = datos.concepto;
                    document.getElementById('monto').value = datos.importe || '';
                    document.getElementById('fecha').value = datos.fecha;
                    
                    // Hacer scroll al formulario
                    document.getElementById('descripcion').scrollIntoView({ 
                        behavior: 'smooth', 
                        block: 'center' 
                    });
                    document.getElementById('descripcion').focus();
                    
                    alert('✅ Formulario pre-llenado con datos de la factura. Revisa antes de guardar.');
                }
            });

            // Mostrar/ocultar texto completo
            document.getElementById('verTextoCompleto').addEventListener('click', function() {
                const textoDiv = document.getElementById('textoCompleto');
                if (textoDiv.style.display === 'none') {
                    textoDiv.style.display = 'block';
                    this.innerHTML = '<i class="bi bi-eye-slash"></i> Ocultar Texto';
                } else {
                    textoDiv.style.display = 'none';
                    this.innerHTML = '<i class="bi bi-eye"></i> Ver Texto';
                }
            });
            
            // Función para mostrar imagen procesada (debug)
            function mostrarImagenProcesada(canvas) {
                const debugDiv = document.getElementById('facturaPreview');
                const existingDebug = document.getElementById('imagenProcesada');
                if (existingDebug) existingDebug.remove();
                
                const debugImg = document.createElement('img');
                debugImg.id = 'imagenProcesada';
                debugImg.src = canvas.toDataURL();
                debugImg.style.cssText = 'max-width: 100%; max-height: 200px; border: 2px solid #007bff; margin-top: 10px;';
                debugImg.title = 'Imagen procesada para OCR';
                
                const label = document.createElement('small');
                label.textContent = 'Imagen procesada:';
                label.style.display = 'block';
                label.style.color = '#007bff';
                label.style.marginTop = '10px';
                
                debugDiv.appendChild(label);
                debugDiv.appendChild(debugImg);
            }
        });
    </script>
