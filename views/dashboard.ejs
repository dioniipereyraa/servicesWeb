            // Función para mejorar la imagen antes del OCR
            // Extraer importe (patrones mejorados)
            // Función mejorada para procesar imágenes de facturas
            async function mejorarImagenParaOCR(imgElement) {
                return new Promise((resolve) => {
                    const canvas = document.createElement('canvas');
                    const ctx = canvas.getContext('2d');
                    
                    // Escalar la imagen para mejor resolución
                    const escala = Math.min(2000 / imgElement.naturalWidth, 2000 / imgElement.naturalHeight, 3);
                    canvas.width = imgElement.naturalWidth * escala;
                    canvas.height = imgElement.naturalHeight * escala;
                    
                    // Activar suavizado
                    ctx.imageSmoothingEnabled = true;
                    ctx.imageSmoothingQuality = 'high';
                    
                    // Dibujar imagen escalada
                    ctx.drawImage(imgElement, 0, 0, canvas.width, canvas.height);
                    
                    // Obtener datos de píxeles
                    const imageData = ctx.getImageData(0, 0, canvas.width, canvas.height);
                    const data = imageData.data;
                    
                    // Paso 1: Convertir a escala de grises y ajustar gamma
                    for (let i = 0; i < data.length; i += 4) {
                        const gray = Math.round(0.299 * data[i] + 0.587 * data[i + 1] + 0.114 * data[i + 2]);
                        
                        // Corrección gamma para mejorar contraste
                        const corrected = Math.pow(gray / 255, 0.7) * 255;
                        
                        data[i] = corrected;
                        data[i + 1] = corrected;
                        data[i + 2] = corrected;
                    }
                    
                    ctx.putImageData(imageData, 0, 0);
                    
                    // Paso 2: Aplicar filtro de sharpening
                    const sharpenKernel = [
                        0, -1, 0,
                        -1, 5, -1,
                        0, -1, 0
                    ];
                    
                    const sharpened = ctx.getImageData(0, 0, canvas.width, canvas.height);
                    const originalData = imageData.data.slice();
                    
                    for (let y = 1; y < canvas.height - 1; y++) {
                        for (let x = 1; x < canvas.width - 1; x++) {
                            let r = 0, g = 0, b = 0;
                            
                            for (let ky = -1; ky <= 1; ky++) {
                                for (let kx = -1; kx <= 1; kx++) {
                                    const idx = ((y + ky) * canvas.width + (x + kx)) * 4;
                                    const kernelIdx = (ky + 1) * 3 + (kx + 1);
                                    const weight = sharpenKernel[kernelIdx];
                                    
                                    r += originalData[idx] * weight;
                                    g += originalData[idx + 1] * weight;
                                    b += originalData[idx + 2] * weight;
                                }
                            }
                            
                            const idx = (y * canvas.width + x) * 4;
                            sharpened.data[idx] = Math.max(0, Math.min(255, r));
                            sharpened.data[idx + 1] = Math.max(0, Math.min(255, g));
                            sharpened.data[idx + 2] = Math.max(0, Math.min(255, b));
                        }
                    }
                    
                    ctx.putImageData(sharpened, 0, 0);
                    
                    // Paso 3: Umbralización adaptativa mejorada
                    const finalData = ctx.getImageData(0, 0, canvas.width, canvas.height);
                    const pixels = finalData.data;
                    
                    // Calcular umbral dinámico por regiones
                    const blockSize = 15;
                    for (let y = 0; y < canvas.height; y += blockSize) {
                        for (let x = 0; x < canvas.width; x += blockSize) {
                            let sum = 0, count = 0;
                            
                            // Calcular promedio del bloque
                            for (let by = y; by < Math.min(y + blockSize, canvas.height); by++) {
                                for (let bx = x; bx < Math.min(x + blockSize, canvas.width); bx++) {
                                    const idx = (by * canvas.width + bx) * 4;
                                    sum += pixels[idx];
                                    count++;
                                }
                            }
                            
                            const umbral = (sum / count) * 0.85; // 15% más estricto
                            
                            // Aplicar umbralización al bloque
                            for (let by = y; by < Math.min(y + blockSize, canvas.height); by++) {
                                for (let bx = x; bx < Math.min(x + blockSize, canvas.width); bx++) {
                                    const idx = (by * canvas.width + bx) * 4;
                                    const valor = pixels[idx] > umbral ? 255 : 0;
                                    
                                    pixels[idx] = valor;
                                    pixels[idx + 1] = valor;
                                    pixels[idx + 2] = valor;
                                }
                            }
                        }
                    }
                    
                    ctx.putImageData(finalData, 0, 0);
                    resolve(canvas);
                });
            }

